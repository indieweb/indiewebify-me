{
	"name": "indieweb/indiewebify-me",
	"description": "Tools to help you get the best out of your indieweb site",
	"authors": [{
		"name": "Brennan Novak",
		"homepage": "https://brennannovak.com"
	},
	{
		"name": "Barnaby Walters",
		"homepage": "http://waterpigs.co.uk"
	}],
	"require": {
		"barnabywalters/mf-cleaner": "^0.2",
		"ezyang/htmlpurifier": "4.7.*",
		"silex/silex": "*",
		"guzzlehttp/guzzle": "*",
		"tantek/cassis": "*",
		"indieweb/mention-client": ">=1.1.6",
		"indieweb/rel-me": "^0.1.1"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.5",
		"squizlabs/php_codesniffer": "3.*"
	},
	"autoload": {
		"files": []
	},
	"scripts": {
		"test": "phpunit --bootstrap tests/bootstrap.php",
		"sniff": "phpcs --standard=phpcs.xml */*.php",
		"snifferfix" : "phpcbf --standard=phpcs.xml  */*.php"
	}
}
